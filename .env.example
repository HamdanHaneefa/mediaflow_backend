# Environment
NODE_ENV=development

# Server
PORT=4000
API_PREFIX=/api

# Database
DATABASE_URL=postgresql://mediaflow:your_password@localhost:5432/mediaflow_crm

# JWT Authentication
JWT_SECRET=your_super_secure_jwt_secret_change_in_production
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URLs
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Redis (Optional for development, required for production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_SECURE=false
FROM_EMAIL=noreply@mediaflow.local
FROM_NAME=MediaFlow CRM

# SendGrid (Production alternative)
# SENDGRID_API_KEY=your_sendgrid_api_key

# File Upload
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/quicktime,application/pdf

# AWS S3 (Optional, for production)
AWS_REGION=us-east-1
AWS_BUCKET=mediaflow-assets
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_CLOUDFRONT_URL=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Logging
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log
LOG_FILE_ACCESS=logs/access.log

# PDF Generation
PDF_GENERATION_TIMEOUT=30000
PDF_COMPANY_NAME=MediaFlow Productions
PDF_COMPANY_ADDRESS=123 Production St, Los Angeles, CA 90028
PDF_COMPANY_PHONE=(555) 123-4567
PDF_COMPANY_EMAIL=info@mediaflow.com
PDF_COMPANY_WEBSITE=www.mediaflow.com

# Analytics
ANALYTICS_CACHE_TTL=3600
ANALYTICS_MAX_DATE_RANGE_DAYS=365

# Background Jobs
BULL_REDIS_URL=redis://localhost:6379
JOB_ATTEMPTS=3
JOB_BACKOFF_DELAY=5000

# Security
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT_MINUTES=30

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api/docs

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PDF_GENERATION=true
ENABLE_FILE_UPLOAD=true
ENABLE_ANALYTICS=true
ENABLE_BACKGROUND_JOBS=true

# Monitoring & Health Checks
HEALTH_CHECK_PATH=/api/health
ENABLE_METRICS=true

# Timezone
TZ=America/Los_Angeles
